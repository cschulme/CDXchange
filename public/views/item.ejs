<!DOCTYPE html>

<html>
    <head>
        <%- include partials/head.ejs %>    
    </head>

    <body>
        <%- include partials/header.ejs %>

        <%- include partials/user-navigation.ejs %>

        <%- include partials/site-navigation.ejs %>

        <!-- Main Content Area -->
        <main>
            <section id="breadcrumb">
                <button name="back" class="button__bubble button__bubble--small" onclick="history.back()">Go Back</button>
                <a href="/" class="button__bar">Home</a> > 
                <a href="/categories" class="button__bar">Categories</a> >
                <a href="/categories/<%= item.catalogCategory %>" class="button__bar"><%= item.catalogCategory %></a> >
                <a href="/categories/<%= item.catalogCategory %>/<%= item.itemCode %>" class="button__bar"><%= item.itemName %></a>
            </section>
            <section id="album-content">
                <div class="content__wrapper album-content__wrapper">
                    <div class="album-content__info">
                        <img src="<%= item.imageURL %>" alt="<%= item.itemName %> Album Cover" class="album-content__info--image">
                        <div class="album-content__info--data">
                            <div class="album-content__info--data-header">
                                <h2><%= item.itemName %></h2>
                                <span class="rating">
                                    <% for(var j = 1; j <= item.rating; j++) { %>
                                        <i class="fas fa-star checked"></i>
                                    <% } %>
                                    <% for(var j = 5; j > item.rating; j--) { %>
                                        <i class="fas fa-star"></i>
                                    <% } %>
                                </span>
                            </div>
                            <h3><%= item.artist %></h3>
                            <h3><%= item.year %> | &copy; <%= item.recordLabel %></h3>
                            <p>
                                <%= item.description %>
                            </p>
                            <% if(owned == false) { %>
                                <a href="/mySwaps?action=offer&theItem=<%= item._id %>" class="button__bubble button__bubble--medium">Swap It</a>
                            <% } else { %>
                                <span class="button__bubble--medium button__bubble--inactive">You own this item</span>
                            <% } %>
                            <a href="/categories/<%= item.catalogCategory %>/<%= item.itemCode %>" class="button__bubble button__bubble--medium">Rate It</a>
                        </div>
                    </div>
                    <div class="album-content__tracks">
                        <table>
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Artist</th>
                                <th><i class="fas fa-clock"></i></th>
                            </tr>
                            <tr>
                                <td>1</td>
                                <td>Welcome To New York</td>
                                <td>Taylor Swift</td>
                                <td>3:32</td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Blank Space</td>
                                <td>Taylor Swift</td>
                                <td>3:51</td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>Style</td>
                                <td>Taylor Swift</td>
                                <td>3:51</td>
                            </tr>
                            <tr>
                                <td>4</td>
                                <td>Out of the Woods</td>
                                <td>Taylor Swift</td>
                                <td>3:55</td>
                            </tr>
                            <tr>
                                <td>5</td>
                                <td>All You Had To Do Was Stay</td>
                                <td>Taylor Swift</td>
                                <td>3:13</td>
                            </tr>
                            <tr>
                                <td>6</td>
                                <td>Shake It Off</td>
                                <td>Taylor Swift</td>
                                <td>3:39</td>
                            </tr>
                            <tr>
                                <td>7</td>
                                <td>I Wish You Would</td>
                                <td>Taylor Swift</td>
                                <td>3:27</td>
                            </tr>
                            <tr>
                                <td>8</td>
                                <td>Bad Blood</td>
                                <td>Taylor Swift</td>
                                <td>3:31</td>
                            </tr>
                            <tr>
                                <td>9</td>
                                <td>Wildest Dreams</td>
                                <td>Taylor Swift</td>
                                <td>3:40</td>
                            </tr>
                            <tr>
                                <td>10</td>
