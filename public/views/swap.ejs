<!DOCTYPE html>

<html>
    <head>
        <%- include partials/head.ejs %>    
    </head>

    <body>
        <%- include partials/header.ejs %>

        <%- include partials/user-navigation.ejs %>

        <%- include partials/site-navigation.ejs %>

        <!-- Main Content Area -->
        <main>
            <section id="breadcrumb">
                <button name="back" class="button__bubble button__bubble--small" onclick="history.back()">Go Back</button>
                <a href="/" class="button__bar">Home</a> > 
                <a href="/categories" class="button__bar">Categories</a> >
                <a href="/categories/<%= swap.item.catalogCategory %>" class="button__bar"><%= swap.item.catalogCategory %></a> >
                <a href="/categories/<%= swap.item.catalogCategory %>/<%= swap.item._id %>" class="button__bar"><%= swap.item.itemName %></a> >
                <a href="/categories/<%= swap.item.catalogCategory %>/<%= swap.item._id %>/swap" class="button__bar">Swap</a>
            </section>
            <section class="content__shell">
                <div class="content__wrapper">
                    <h2 class="section--header">Swap this CD...</h2>
                    <br>
                    <div class="album-content__info album-content__info--small">
                        <img src="/Images/AlbumCovers/<%= swap.item._id %>.jpg" alt="<%= swap.item.itemName %> Album Cover" class="album-content__info--image">
                        <div class="album-content__info--data">
                            <div class="album-content__info--data-header">
                                <h2><%= swap.item.itemName %></h2>
                                <span class="rating">
                                    <% for(var j = 1; j <= swap.item.rating; j++) { %>
                                        <i class="fas fa-star checked"></i>
                                    <% } %>
                                    <% for(var j = 5; j > swap.item.rating; j--) { %>
                                        <i class="fas fa-star"></i>
                                    <% } %>
                                </span>
                            </div>
                            <h3><%= swap.item.artist %> | <%= swap.item.year %> | &copy; <%= swap.item.recordLabel %></h3>
                            <p>
                                <%= swap.item.description %>
                            </p>
                        </div>
                    </div>
                    <br>
                    <h2 class="section--header">...for one of yours:</h2>
                    <br>
                    <% if(typeof swappableItems !== 'undefined' && swappableItems.length > 0) { %>
                        <form action='/createSwap' method="POST">
                            <table>
                                <tr>
                                    <th>Select</th>
                                    <th>Album</th>
                                    <th>Artist</th>
                                    <th>Year</th>
                                    <th>Category</th>
                                    <th>Rating</th>
                                </tr>
                                <% swappableItems.forEach(function(myItem){ %>
                                    <% if(myItem.item._id != swap.item._id) { %>
                                        <tr>
                                            <td><input type="radio" name="swappedAlbum" value="<%= myItem._id %>" class="form__radio-button"></td>
                                            <td><a href="/categories/<%= myItem.item.catalogCategory %>/<%= myItem.item._id %>" class="button__bar button__bar--small"><%= myItem.item.itemName %></a></td>
                                            <td><a href="/artists" class="button__bar button__bar--small"><%= myItem.item.artist %></a></td>
                                            <td><%= myItem.item.year %></td>
                                            <td><a href="/categories/<%= myItem.item.catalogCategory %>" class="button__bar button__bar--small"><%= myItem.item.catalogCategory %></a></td>
                                            <td>
                                                <span class="rating">
                                                    <% for(var j = 1; j <=  myItem.item.rating; j++) { %>
                                                        <i class="fas fa-star checked"></i>
                                                    <% } %>
                                                    <% for(var j = 5; j > myItem.item.rating; j--) { %>
                                                        <i class="fas fa-star"></i>
                                                    <% } %>
                                                </span>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% }); %>
                                <input type="hidden" name="swap" value="<%= swap._id %>">
                            </table>
                            <br>
                            <input type="submit" value="Confirm Swap" class="button__bubble button__bubble--large right">
                            <br>
                            <br>
                        </form>
                    <% } else if( theUser.user == true) { %>
                        <h3>There are no items to show!  Add some items to your account to swap.</h3>
                    <% } else { %>
                        <h3>There are no items to show!  Please log in.</h3>
                    <% } %>
                </div>
            </section>

        </main>
        
        <%- include partials/footer.ejs %>
    </body>
</html>