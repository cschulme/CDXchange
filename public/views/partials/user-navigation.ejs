<nav id="user-nav">
    <ul>
        <% if(theUser.user == true) { %>
            <li><a href="/signout" class="button__bubble button__bubble--large">Sign Out</a></li>
            <li><a href="/myItems" class="button__bubble button__bubble--large">My CDs</a></li>
            <li><a href="/mySwaps" class="button__bubble button__bubble--large">My Swaps</a></li>
            <li><a href="/profile?user=<%= theUser.id %>" class="button__bubble button__bubble--large">My Profile</a></li>
        <% } else { %>
            <li><button class="button__bubble button__bubble--large modal__sign-in--trigger">Sign In</button></li>
            <li><span class="button__bubble--inactive button__bubble--span">More Options Available Upon Login</span></li>
        <% } %>
        
    </ul>

    <form method="post" class="search__form">
        <input type="text" placeholder="Search... (Placeholder: not operational.)" class="search__bar display__none">
        <div class="search__expand"><i class="fa fa-search"></i></div>
        <button type="submit" class="search__bar--submit display__none"><i class="fa fa-search"></i></button>
    </form>
    
</nav>

<div class="modal modal__sign-in">
    <div class="modal--content modal__sign-in--content">
        <span class="modal--close">&times;</span>
        <form method="POST" action="/signin" class="sign-in__form">
            <h2>Sign In</h2>
            <label for="username">Username</label>
            <input type="text" name="username" value="cschulme" placeholder="Note: Case-sensitive.">
            <label for="password">Password</label>
            <input type="password" name="password" value="password" placeholder="Note: Case-sensitive.">
            <% if(typeof fromError !== 'undefined' && fromError == true) { %>
                <input type="hidden" name="cameFromError" value="true">
            <% } %>
            <input type="submit" value="Sign In" class="button__bubble button__bubble--large">
            <div class="forgot">
                <a href="#" class="button__bar">Forgot Username?</a>
                <a href="#" class="button__bar">Forgot Password?</a>
            </div>
            <div class="sign-up">
                <hr>
                Not registered yet?
                <a href="/register" class="button__bubble button__bubble--large">Sign up</a>
            </div>
        </form>
    </div>
</div>